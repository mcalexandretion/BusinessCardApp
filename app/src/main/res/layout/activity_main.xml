<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D7192"
    android:padding="16dp">

    <!-- CHapter 1-->
    <LinearLayout
        android:id="@+id/first_chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/android_icon"
            android:layout_width="150dp"
            android:layout_height="145dp"
            android:layout_gravity="center"
            android:background="#415A78"
            android:src="@drawable/android_logo" />

        <TextView
            android:id="@+id/name_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/name_surname"
            android:textColor="#3DDB83"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/post"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- Chapter 2-->
    <LinearLayout
        android:id="@+id/second_chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Number -->
        <LinearLayout
            android:id="@+id/number_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/number_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/number_text"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- ID -->
        <LinearLayout
            android:id="@+id/id_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/account_box" />

            <TextView
                android:id="@+id/id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/id_text"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- Email -->
        <LinearLayout
            android:id="@+id/email_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/email_text"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

